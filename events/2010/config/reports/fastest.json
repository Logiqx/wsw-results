    },
    {
      "Title": "Fastest Sailboards",
      "Fields": "Name,Nation,Sail Number,Status,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard"
    },
    {
      "Title": "Fastest Craft TBCs",
      "Fields": "Name,Nation,Sail Number,Craft Type,Status,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=TBC"
    },
    {
      "Title": "Fastest Pros",
      "Fields": "Name,Nation,Sail Number,Craft Type,Course,Start Time,Speed (kts)",
