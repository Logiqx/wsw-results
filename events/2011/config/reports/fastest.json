{
  "Periods": [
    {
      "Suptitle": "Fastest of the Day - {Date}",
      "Period": "Session"
    },
    {
      "Suptitle": "Fastest of the Week",
      "Period": "Event",
      "HideFields": "Course,Start Time"
    }
  ],
  "Limit": 3,
  "Profile": true,
  "Reports": [
    {
      "Title": "Top 10",
      "Fields": "Name,Nation,Craft Type,Status,Course,Start Time,Speed (kts)",
      "Limit": 10
    },
    {
      "Title": "Fastest Boats",
      "Fields": "Name,Nation,Boat Name,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Boat"
    },
    {
      "Title": "Fastest Kiteboards",
      "Fields": "Name,Nation,Status,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Kiteboard"
    },
    {
      "Title": "Fastest Sailboards",
      "Fields": "Name,Nation,Status,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard"
    },
    {
      "Title": "Fastest Craft TBCs",
      "Fields": "Name,Nation,Craft Type,Status,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=TBC"
    },
    {
      "Title": "Fastest Ladies",
      "Fields": "Name,Nation,Craft Type,Status,Course,Start Time,Speed (kts)",
      "Filter": "Gender=F"
    },
    {
      "Title": "Fastest Pro Sailboards / Kiteboards",
      "Fields": "Name,Nation,Craft Type,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type<>Boat,Status=Pro Fleet"
    },
    {
      "Title": "Fastest Gold Fleet Sailboards / Kiteboards",
      "Fields": "Name,Nation,Craft Type,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type<>Boat,Status=Gold Fleet"
    },
    {
      "Title": "Fastest Gold Fleet Sailboards",
      "Fields": "Name,Nation,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Gold Fleet"
    },
    {
      "Title": "Fastest Amateur Sailboards - Masters",
      "Fields": "Name,Nation,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Amateur,Novice<>Y,Master=Y"
    },
    {
      "Title": "Fastest Amateur Sailboards - Non-Masters",
      "Fields": "Name,Nation,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Amateur,Novice<>Y,Master<>Y"
    },
    {
      "Title": "Fastest Novice Sailboards / Kiteboards",
      "Fields": "Name,Nation,Craft Type,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type<>Boat,Novice=Y"
    },
    {
      "Title": "Fastest Lady Sailboards",
      "Comment": "(excluding professionals)",
      "Fields": "Name,Nation,Status,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status<>Pro Fleet,Gender=F"
    },
    {
      "Title": "Fastest Youth Sailboards",
      "Comment": "(age <17 on the first day of speed week)",
      "Fields": "Name,Nation,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Youth Fleet",
      "Period": "Session"
    },
    {
      "Title": "Fastest Youth Sailboards",
      "Comment": "(age <17 on the first day of speed week)",
      "Fields": "Name,Nation,Course,Start Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Youth Fleet,Weekend=Y",
      "Sort": "Speed (kts)=DSC",
      "Period": "Event"
    }
  ]
}
