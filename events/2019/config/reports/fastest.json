{
  "Periods": [
    {
      "Suptitle": "Fastest of the Day - {Date}",
      "Period": "Session",
      "HideFields": "Course"
    },
    {
      "Suptitle": "Fastest of the Week",
      "Period": "Event",
      "HideFields": "Course,Time"
    }
  ],
  "Limit": 3,
  "Profile": true,
  "Reports": [
    {
      "Title": "Top 10",
      "Fields": "Name,Nation,Craft Type,Status,Course,Time,Speed (kts)",
      "Limit": 10
    },
    {
      "Title": "Fastest Boats",
      "Fields": "Name,Nation,First Timer,Boat Name,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Boat"
    },
    {
      "Title": "Fastest Kiteboards",
      "Fields": "Name,Nation,First Timer,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Kiteboard"
    },
    {
      "Title": "Fastest Sailboards",
      "Fields": "Name,Nation,Status,First Timer,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard"
    },
    {
      "Title": "Fastest Craft TBCs",
      "Fields": "Name,Nation,Craft Type,Status,First Timer,Course,Time,Speed (kts)",
      "Filter": "Craft Type=TBC"
    },
    {
      "Title": "Fastest Ladies",
      "Fields": "Name,Nation,Craft Type,Status,First Timer,Course,Time,Speed (kts)",
      "Filter": "Gender=F"
    },
    {
      "Title": "Fastest Pro Sailboards",
      "Fields": "Name,Nation,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Pro Fleet"
    },
    {
      "Title": "Fastest Gold Fleet Sailboards",
      "Fields": "Name,Nation,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Gold Fleet"
    },
    {
      "Title": "Fastest Amateur Sailboards",
      "Comment": "(excludes first time amateur sailboards)",
      "Fields": "Name,Nation,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Amateur,First Timer<>Y"
    },
    {
      "Title": "Fastest First Time Amateur Sailboards",
      "Fields": "Name,Nation,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Amateur,First Timer=Y"
    },
    {
      "Title": "Fastest Lady Sailboards",
      "Comment": "(excluding pros and youths)",
      "Fields": "Name,Nation,Status,First Timer,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Gender=F,Status<>Pro Fleet,Status<>Youth Fleet"
    },
    {
      "Title": "Fastest Youth Sailboards",
      "Comment": "(age <18 on 31st Oct)",
      "Fields": "Name,Nation,First Timer,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Youth Fleet",
      "Period": "Session"
    },
    {
      "Title": "Fastest Youth Sailboards",
      "Comment": "(age <18 on 31st Oct)",
      "Fields": "Name,Nation,First Timer,Course,Time,Speed (kts)",
      "Filter": "Craft Type=Sailboard,Status=Youth Fleet,Weekend=Y",
      "Sort": "Speed (kts)=DSC",
      "Period": "Event"
    }
  ]
}
